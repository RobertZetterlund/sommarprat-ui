// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  //url      = "file:/data/sqlite.db"
}

model Episode {
  dob        String?
  title      String
  date       String
  playlistId String  @id
  imageurl   String
  episodeUrl String
  yearAired  Int
  popularity Float
}

model Artist {
  id    String @id
  count Int
  name  String
}

model Album {
  id         String @id
  count      Int
  name       String
  artistName String
  artistId   String
  albumImg   String
}

model Track {
  id         String @id
  name       String
  count      Int
  albumId    String
  albumName  String
  albumImg   String
  artistId   String
  artistName String
}
